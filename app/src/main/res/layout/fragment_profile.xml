<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="370dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/big_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.95"
                        android:background="@color/colorPrimary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="70dp"
                            app:civ_border_color="@android:color/white"
                            app:civ_border_width="1dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:layout_marginTop="100dp">

                            <TextView
                                android:id="@+id/share"
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/more_btn_bg"
                                android:gravity="center"
                                android:text="分享主页"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/follow"
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/follow_btn_bg"
                                android:gravity="center"
                                android:text="关注"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />
                            <ImageView
                                android:id="@+id/more"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/more_btn_bg"
                                android:scaleType="centerInside"
                                android:src="@drawable/a8x" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/avatar"
                            android:layout_marginTop="10dp"
                            android:gravity="top"
                            android:text="番茄沙司"
                            android:textColor="@android:color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name"
                            android:gravity="top"
                            android:text="抖音号：19919261"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/weibo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/count"
                            android:layout_marginTop="-5dp"
                            android:drawableLeft="@drawable/we"
                            android:drawablePadding="3dp"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/v6"
                            android:gravity="center"
                            android:text="微博主页"
                            android:textColor="@android:color/white"
                            android:textSize="11sp" />
                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#37373f"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/weibo"/>
                        <TextView
                            android:id="@+id/sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/line"
                            android:gravity="top"
                            android:text="本宝宝暂时还没有想到个性签名"
                            android:textColor="#8f8f92"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp" />
                        <LinearLayout
                            android:id="@+id/info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/sign"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:drawableLeft="@drawable/a9b"
                                android:paddingRight="7dp"
                                android:paddingLeft="7dp"
                                android:text="1岁"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:background="@drawable/tag_bg_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:paddingRight="7dp"
                                android:paddingLeft="7dp"
                                android:text="摩羯座"
                                android:textColor="@android:color/white"
                                android:layout_marginLeft="5dp"
                                android:textSize="13sp"
                                android:background="@drawable/tag_bg_2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:paddingRight="7dp"
                                android:paddingLeft="7dp"
                                android:text="江苏⋅南京"
                                android:textColor="@android:color/white"
                                android:layout_marginLeft="5dp"
                                android:textSize="13sp"
                                android:background="@drawable/tag_bg_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/info"
                            android:layout_marginTop="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:text="22"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_marginLeft="3dp"
                                android:textColor="@android:color/white"
                                android:text="关注"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="12dp"
                                android:textColor="@android:color/white"
                                android:text="3.4w"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_marginLeft="3dp"
                                android:textColor="@android:color/white"
                                android:text="粉丝"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="12dp"
                                android:textColor="@android:color/white"
                                android:text="100.4w"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_marginLeft="3dp"
                                android:textColor="@android:color/white"
                                android:text="获赞"/>
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:id="@+id/tab_container"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#272622">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#f9cc35"
                    android:textColor="@android:color/black"
                    android:text="作品 100"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#0d0e15"
                    android:textColor="#9a9b9d"
                    android:text="喜欢 88"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <RelativeLayout
                android:id="@+id/title_bar_panel"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:alpha="0"
                android:background="@color/colorPrimary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/title_bar_center_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/white"
                        android:textSize="19sp"
                        android:gravity="center"
                        android:layout_marginBottom="14dp"
                        android:text="番茄沙司"/>
                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/follow_btn_bg"
                        android:gravity="center"
                        android:text="关注"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:alpha="0.9"
                android:rotation="180"
                android:scaleType="centerInside"
                android:src="@drawable/a7e"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/mock_tab_container"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#272622"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f9cc35"
                android:textColor="@android:color/black"
                android:text="作品 100"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#0d0e15"
                android:textColor="#9a9b9d"
                android:text="喜欢 88"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>